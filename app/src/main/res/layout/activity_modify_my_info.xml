<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyMyInfo">

    <ImageView
        android:id="@+id/iv_modify_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/btn_profilepic"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:freezesText="false"
        android:text="프사설정"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_modify_profile"
        app:layout_constraintStart_toEndOf="@+id/iv_modify_profile" />

    <TextView
        android:id="@+id/tv_modify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="닉네임"
        app:layout_constraintBottom_toBottomOf="@+id/et_modify_nickname"
        app:layout_constraintEnd_toStartOf="@+id/et_modify_nickname"
        app:layout_constraintTop_toTopOf="@+id/et_modify_nickname"
        app:layout_constraintVertical_bias="0.49" />

    <EditText
        android:id="@+id/et_modify_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="최소 4자리 이상"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/tv_modify_showemail"
        app:layout_constraintTop_toBottomOf="@+id/tv_modify_showemail" />

    <TextView
        android:id="@+id/tv_modify_pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호확인"
        app:layout_constraintBottom_toBottomOf="@+id/et_modify_pw_check"
        app:layout_constraintEnd_toStartOf="@+id/et_modify_pw_check"
        app:layout_constraintTop_toBottomOf="@+id/et_modify_pw" />

    <EditText
        android:id="@+id/et_modify_pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_modify_pw" />

    <Button
        android:id="@+id/btn_modify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="100dp"
        android:text="정보수정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_modify_nickname" />

    <EditText
        android:id="@+id/et_modify_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_modify_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_modify_pw_check" />

    <TextView
        android:id="@+id/tv_modify_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="32dp"
        android:text="이메일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_modify_profile" />

    <TextView
        android:id="@+id/tv_modify_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="비밀번호"
        app:layout_constraintBottom_toBottomOf="@+id/et_modify_pw"
        app:layout_constraintEnd_toStartOf="@+id/et_modify_pw"
        app:layout_constraintTop_toTopOf="@+id/et_modify_pw" />

    <TextView
        android:id="@+id/tv_modify_showemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="여기에 이메일이 불러와질겨..."
        app:layout_constraintStart_toEndOf="@+id/tv_modify_email"
        app:layout_constraintTop_toBottomOf="@+id/iv_modify_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>